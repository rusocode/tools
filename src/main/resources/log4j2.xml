<?xml version="1.0" encoding="UTF-8"?>

<!-- Configura el logger utilizando el nivel de eventos internos en "warn" para registrar los mensajes 
	en consola. -->
<Configuration status="warn" strict="true">

	<Properties>
		<Property name="filename">target/logs/test.log</Property>
	</Properties>

	<Appenders>
		<!-- Salida en consola -->
		<Console name="Console" target="SYSTEM_OUT"> <!-- STDOUT se suele utilizar como nombre -->
			<PatternLayout pattern="%d [%p] %c{10}.%t: %m%n" />
		</Console>
		<!-- Salida en archivo -->
		<Appender type="File" name="File" fileName="${filename}">
			<Layout type="PatternLayout">
				<Pattern>%d [%p] %c{10}.%t: %m%n</Pattern>
			</Layout>
		</Appender>
	</Appenders>

	<!-- Configura los loggers para cada appender -->
	<Loggers>
		<!-- Indica el nombre del paquete que ejecuta el logger en el atributo name y establece la aditividad 
			en falso para que el root (padre del appender de la consola) no repita los mensajes. -->
		<Logger name="log" level="debug" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="log" level="debug">
			<AppenderRef ref="File" />
		</Logger>
		<!-- Nivel raiz -->
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>

</Configuration>
