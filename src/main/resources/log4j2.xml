<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<Configuration status="WARN">

	<Appenders>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

	</Appenders>

	<Loggers>

		<Logger name="log" level="debug" additivity="false"> <!-- En la clave name va el nombre del paquete que ejecuta el logger -->
			<AppenderRef ref="Console" />
		</Logger>

		<!-- Agrega un nuevo logger si se ejecuta desde otro paquete -->
		<Logger name="_LABORATORIO" level="debug" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

		<Root level="error"> <!-- Nivel de raiz -->
			<AppenderRef ref="Console" />
		</Root>

	</Loggers>

</Configuration>

<!-- https://logging.apache.org/log4j/2.x/manual/configuration.html -->